{% unless template == 'cart' %}
    <div class="js-cartToggle js-cartToggle-close cart-close icon-close diamond-outline"><div class="diamond"></div></div>
    <div class="scroll">
      <div class="cart-wrapper container">
{% endunless %}

<div id="Cart" class="row cart-row">
  <div class="cart-title block s1 u-center">
    <h2>{{ 'cart.labels.cart_title' | t }}</h2>

  {% if cart.item_count > 0 %}
    <p>{{ 'cart.labels.total_items' | t }} (<span id="CartItemCount">{{cart.item_count}}</span>)</p>
  </div>

  <form action="/cart" method="post">
    <div class="cart-table d-table">
      <div class="med_hide d-table-header">
        <div class="d-table-row">
          <div class="cart-product-thumb d-table-cell"></div>
          <div class="d-table-cell"></div>
          <div class="cart-product-quantity d-table-cell">
            {{ 'cart.labels.quantity' | t }}
          </div>
          <div class="cart-product-total d-table-cell">
            {{ 'cart.labels.total' | t }}
          </div>
          <div class="cart-product-remove d-table-cell"></div>
        </div>
      </div>

      <div id="CartItems" class="med_d-block d-table-row-group">

        {% for item in cart.items %}

          <div class="line-item med_u-container med_u-block med_u-row d-table-row" data-variant-id="{{ item.variant.id }}">
            <div class="cart-product-thumb med_u-block med_d-block d-table-cell">
              <a class="product-thumbnail lazyload fade-in" href="{{ collection_url }}{{ item.url }}" data-bgset="{% include 'bgset', image: item.image %}" data-sizes="auto" data-parent-fit="cover"></a>
            </div>
            <div class="cart-product-desc med_u-block med_d-block d-table-cell">
              <a class="h3" href="{{ collection_url }}{{ item.url }}">{{ item.product.title }}</a>
              <p class="u-margin-0">{% if item.variant.title != 'Default Title' %}{{ item.variant.title }}{%endif%}</p>
              <p class="product-price u-margin-0" data-price="{{ item.price }}">
                {% if item.original_price > item.final_price %}
                  <s>{{ item.original_price | money }}</s>
                {% endif %}
                <span>{{ item.final_price | money }}</span>
              </p>

              {% assign property_size = item.properties | size %}
              {% if property_size > 0 %}
                <div class="cart-product-props h5">
                  <em>{{ cart.labels.properties | t }}:</em><br/>
                  {% for p in item.properties %}
                    {% unless p.last == blank %}
                      {{ p.first | strip }}:
                      {% if p.last contains '/uploads/' %}
                        <a class="lightbox" href="{{ p.last }}">{{ p.last | split: '/' | last }}</a>
                      {% else %}
                        {{ p.last }}
                      {% endif %}
                    <br>
                    {% endunless %}
                  {% endfor %}
                </div>
              {% endif %}

            </div>
            <div class="cart-product-quantity med_u-block med_d-block d-table-cell">
              <div class="js-counter counter inputGroup">
                <input type="text" name="updates[]" id="updates_{{ item.id }}" class="inputCounter" value="{{ item.quantity }}" />
                <span class="inputCounter-up"><span class="icon-plus"></span>&nbsp;</span>
                <span class="inputCounter-down">&nbsp;<span class="icon-minus"></span></span>
              </div>

            </div>
            <div class="cart-product-total med_u-block med_d-block d-table-cell">
              <div class="cart-product-total-price">
                {% if item.original_line_price > item.final_line_price %}
                  <s>{{ item.original_line_price | money }}</s>
                {% endif %}
                {{ item.final_line_price | money }}
              </div>

              {% comment %}
                Display the specific line item discount
              {% endcomment %}
              {% if item.line_level_discount_allocations.size > 0 %}
                <div class="cart-product-discounts">
                  {% for discount_allocation in item.line_level_discount_allocations %}
                    <p>{{ discount_allocation.discount_application.title }} (-{{ discount_allocation.amount | money }})</p>
                  {% endfor %}
                </div>
              {% elsif item.discount_allocations.size > 0 %}
                <div class="cart-product-discounts">
                  {% for discount_allocation in item.discount_allocations %}
                    <p>{{ discount_allocation.discount_application.title }} (-{{ discount_allocation.amount | money }})</p>
                  {% endfor %}
                </div>
              {% endif %}
            </div>
            <div class="cart-product-remove med_d-block-ab d-table-cell">
              <i class="icon-close h4"></i>
            </div>
          </div>
        {% endfor %}

      </div>

    </div>
    <span class="clear-both"></span>
    <div class="checkout-buttons row inline">

      <div class="block s1 u-right u-margin-b-sm">
        <div class="cart-totals-table">
          {% comment %} Cart level discounts {% endcomment %}
          <p class="cart-total-price">
            <span>{{ 'cart.labels.subtotal' | t }}: </span>
            <span>{{ cart.total_price | money }}</span>
          </p>

          {%- if cart.cart_level_discount_applications != blank -%}
            <p class="cart-discounts">
              {%- for discount_application in cart.cart_level_discount_applications -%}
                <span>{{ discount_application.title }}: </span>
                <span class="cart-discount-price">{{ discount_application.total_allocated_amount | money | prepend: '-' }}</span>
              {%- endfor -%}
            </p>
          {%- endif -%}
        </div>

        {% if settings.tax_text %}
          <p class="cart-tax-info">{{ settings.tax_text }}</p>
        {% endif %}
      </div>

      {% if settings.enable_cart_order_notes %}
        <div class="order-notes">
          <label class="order-notes__label" for="order-notes">{{ 'cart.labels.add_a_note' | t }}</label>
          <textarea id="order-notes" class="order-notes__content" name="note"></textarea>
        </div>
      {% endif %}
      <button class="button cart-checkout s1 sm_s12 med_s25 lg_s13 xxl_s14 u-margin-b-sm" type="submit" name="checkout">{{ 'cart.labels.checkout' | t }}</button>
      <a {% if settings.continue_shopping_link %}href="{{ settings.continue_shopping_link }}"{% endif %} class="js-continueShopping s1 sm_s12 med_s25 lg_s13 xxl_s14 u-margin-b-sm {% if template == 'cart' %}js-go-back{% endif %} button">{{ 'cart.labels.continue_shopping' | t }}</a>

    </div>
    {% if additional_checkout_buttons %}
      <div class="additional-checkout-buttons row inline">
        {{ content_for_additional_checkout_buttons }}
      </div>
    {% endif %}
  </form>
</div> <!-- close .cart-row -->

{% else %}

  <p>{{ 'cart.labels.empty_cart' | t }}</p>
  <a {% if settings.continue_shopping_link %}href="{{ settings.continue_shopping_link }}"{% endif %} tabindex="-1" class="js-continueShopping js-continueShopping--empty {% if template == 'cart' %}js-go-back{% endif %} button">{{ 'cart.labels.continue_shopping' | t }}</a>
  </div> <!-- closing tag for title row -->
</div> <!-- close .cart-row -->

{% endif %}

{% unless template == 'cart' %}
  </div>
  </div>
{% endunless %}
