	  "content":"Standard navigation",
	  "info":"These options are only applicable if you have enabled Standard navigation above"
	},
	{
	  "type": "select",
	  "id": "logo_position",
	  "label": "Logo position",
	  "default": "logo_left",
	  "options": [
		{
		  "value": "logo_left",
		  "label": "Left"
		},
		{
		  "value": "logo_center",
		  "label": "Center"
		}
	  ]
	},
	{
	  "type": "select",
	  "id": "links_position",
	  "label": "Links position",
	  "default": "links_right",
	  "options": [
		{
		  "value": "links_left",
		  "label": "Left"
		},
		{
		  "value": "links_right",
		  "label": "Right"
		},
		{
		  "value": "links_center",
		  "label": "Center"
		}
	  ]
	},
	{
	  "type":"header",
	  "content":"Mega menu"
	},
	{
	  "type": "image_picker",
	  "id": "meganav_image",
	  "label": "Image",
	  "info": "Recommended size: 500 x 800 px"
	},
	{
	  "type": "text",
	  "id": "meganav_image_heading",
	  "label": "Heading"
	},
	{
	  "type": "url",
	  "id": "meganav_image_link",
	  "label": "Link"
	},
	{
	  "type":"header",
	  "content":"Announcement bar"
	},
	{
	  "type":"checkbox",
	  "id":"show_announcement",
	  "label":"Show announcement",
	  "default": true
	},
	{
	  "type":"checkbox",
	  "id":"show_announcement_on_mobile",
	  "label":"Show on mobile",
	  "default": true
	},
	{
	  "type": "richtext",
	  "id": "text",
	  "label": "Text",
	  "default":"<p>Broadcast sales, promos, or other offerings here</p>"
	},
	{
	  "type": "url",
	  "id": "link",
	  "label": "Link"
	}
  ]
}
{% endschema %}
